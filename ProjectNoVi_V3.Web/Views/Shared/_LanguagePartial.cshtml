@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Localization
@{
    string languageId = "en";
    string cookieCulture = Context.Request.Cookies[CookieRequestCultureProvider.DefaultCookieName];
    var thisPage = string.IsNullOrEmpty(Context.Request.Path) ? "~/index.html" : $"~{Context.Request.Path.Value}";

    if (cookieCulture!=null)
    {
        languageId = cookieCulture.Substring(2, 2); 
    }

    string languageName = Language.LanguageDictionary[languageId].Name; 
}
    
<ul class="navbar-nav">
    <li class="nav-item dropdown">
        <a class="nav-link text-dark dropdown-toggle" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@languageName</a>
        <ul class="dropdown-menu">
            @foreach (Language l in Language.Languages)
                if (l.Id != languageId)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="ChangeLanguage" asp-route-id="@l.Id" asp-route-returnUrl=@thisPage>@l.Name</a>
                    </li>
                }
        </ul>
    </li>
</ul>
